{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "Create vpc with public subnet",
    "Resources": {
        "Myvpc": {
            "Type": "AWS::EC2::VPC",
            "Properties": {
                "CidrBlock": "10.0.0.0/16",
                "EnableDnsHostnames": true,
                "EnableDnsSupport": true,
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": "myvpc"
                    }
                ]
            }
        },
        "Publicsubnet": {
            "Type": "AWS::EC2::Subnet",
            "Properties": {
                "AvailabilityZone": {
                    "Fn::Select": [
                        0,
                        {
                            "Fn::GetAZs": ""
                        }
                    ]
                },
                "CidrBlock": "10.0.0.0/24",
                "MapPublicIpOnLaunch": true,
                "VpcId": {
                    "Ref": "Myvpc"
                },
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": "publicsubnet"
                    }
                ]
            }
        },
        "Myig": {
            "Type": "AWS::EC2::InternetGateway",
            "Properties": {
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": "myigw"
                    }
                ]
            }
        },
        "Attachigw": {
            "Type": "AWS::EC2::VPCGatewayAttachment",
            "Properties": {
                "InternetGatewayId": {
                    "Ref": "Myig"
                },
                "VpcId": {
                    "Ref": "Myvpc"
                }
            }
        },
        "Myroutetable": {
            "Type": "AWS::EC2::RouteTable",
            "Properties": {
                "VpcId": {
                    "Ref": "Myvpc"
                },
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": "myroutetabel"
                    }
                ]
            }
        },
        "Myroute": {
            "Type": "AWS::EC2::Route",
            "Properties": {
                "RouteTableId": {
                    "Ref": "Myroutetable"
                },
                "GatewayId": {
                    "Ref": "Myig"
                },
                "DestinationCidrBlock": "0.0.0.0/0"
            }
        },
        "Subnetaccsociation":{
            "Type" : "AWS::EC2::SubnetRouteTableAssociation",
             "Properties" : {
                "RouteTableId" : {
                    "Ref":"Myroutetable"
                },
                "SubnetId" : {
                    "Ref":"Publicsubnet"
                }
             }
        }
        
    }
}